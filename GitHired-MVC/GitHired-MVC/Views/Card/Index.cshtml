@model GitHired_MVC.Models.Card;
@{
    ViewData["Title"] = "Index";
}
<body>
    <div class="green gradient container-l center pad-bottom-s pad-top-s">
        <table class="center">
            <tbody>
                <h1 class="center pad-bottom-s">User Info:</h1>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Job Title: </td>
                    <td>@Model.JobTitle</td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Company Name: </td>
                    <td>@Model.CompanyName</td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Wage: </td>
                    <td>@Model.Wage</td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Description: </td>
                    <td>@Model.Description</td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Resume?: </td>
                    <td>@Model.ResumeCheck</td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Cover Letter?: </td>
                    <td>@Model.CoverLetterCheck</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="pad-bottom-m"></div>
</body>