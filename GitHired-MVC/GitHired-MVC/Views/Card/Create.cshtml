@model GitHired_MVC.Models.ViewModels.SearchViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<body>
    <form asp-controller="Card" asp-action="Create">
        <table class="center pad-bottom-xs">
            <tbody>
                <h1 class="center pad-bottom-s">Create Card:</h1>
                <tr class="align-left"></tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">Card Name: </td>
                    <td><input type="text" asp-for="Card.JobTitle"></td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">GitHub Repo (Optionl): </td>
                    <td><input type="text" asp-for="Card.GHLink1"></td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">GitHub Repo (Optionl): </td>
                    <td><input type="text" asp-for="Card.GHLink2"></td>
                </tr>
                <tr class="align-left">
                    <td class="pad-right-s pad-bottom-xs bold">GitHub Repo (Optionl): </td>
                    <td><input type="text" asp-for="Card.GHLink2"></td>
                </tr>
            </tbody>
        </table>
        <input type="submit" value="Create" class="button">
    </form>
</body>