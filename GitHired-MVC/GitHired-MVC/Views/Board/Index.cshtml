@model GitHired_MVC.Models.Board;
@using GitHired_MVC.Models;
@{
            Layout = "_Layout";
        }
<body>
    <h1 class="center black-gradient">Board Focus: @*@Model.Focus.Name*@</h1>
    <p class="flex-row-container">
        <a asp-action="Index" asp-controller="Search" class="CRUD pad-top-xs">Find and Add Jobs</a>
        <a asp-action="Create" class="CRUD pad-top-xs">Create A New Column</a>
        <a asp-action="Delete" class="CRUD pad-top-xs">Delete A Column</a>
    </p>
    <div class="board-container center">
        @foreach (var item in Model.Column)
        {
            <div class="board-label pad-bottom-xs green light-green">
                <h3 class="black-gradient">@item.Name</h3>
            </div>
        }
    </div>
    <div class="board-container">
        @foreach (Column column in Model.Column)
        {
            <div class="column green ">
                @if (column.Card.Count > 0) {
                    foreach (Card card in column.Card)
                    {
                    <div class="green"></div>
                    }
                }
            </div>
        }
    </div>
</body>
